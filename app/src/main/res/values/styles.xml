<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="buttons" >

        <item name="android:background"> @drawable/buttons_round_shape</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">16dp</item>
        <item name="textAllCaps">false</item>
    </style>

  <style name="editTextStyle">
      <item name="android:background">@drawable/edit_text_shape</item>

      <item name="android:layout_marginBottom">8dp</item>
      <item name="android:maxLines">1</item>
  </style>

    <style name="spinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:textColor" >#636363</item>
    </style>
    

</resources>