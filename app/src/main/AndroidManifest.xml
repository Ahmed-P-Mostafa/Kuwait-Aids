<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studentaid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.c2dm,permission,RECEIVE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.ministryEmployee.DocumentsActivity"></activity>
        <activity android:name=".ui.EmployeeLoginActivity" />
        <activity android:name=".ui.ministryEmployee.SignupMinistryActivity" />
        <activity android:name=".ui.ministryEmployee.MinistryHomeActivity" />
        <activity android:name=".ui.universityEmployee.UniversitySignupActivity" />
        <activity android:name=".ui.universityEmployee.UniversityMainActivity" />
        <activity android:name=".ui.CitizenLoginActivity" />
        <activity android:name=".ui.student.SendRequestActivity" />
        <activity android:name=".ui.graduate.HomeGraduateActivity" />
        <activity android:name=".ui.student.HomeStudentActivity" />
        <activity android:name=".base.BaseActivity" />
        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.LandingActivity" />
        <activity android:name=".ui.student.RegisterStudentActivity" />

        <service
            android:name=".base.MyFirebaseMessagingService"
            android:exported="false"
            android:permission="com.google.android.c2dm,permission,SEND">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.android,c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
    </application>

</manifest>